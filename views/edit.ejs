<%include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= news.title %></div>
  <form class="ui form" action="/news/<%= news._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="news[title]" value="<%= news.title %>" />
    </div>

    <div class="field">
      <label>Image</label>
      <input type="text" name="news[image]" value="<%= news.image %>" />
    </div>

    <div class="field">
      <label>News Content</label>
      <textarea name="news[body]" required><%= news.body %></textarea>
    </div>
    <input class="ui big inverted purple button" type="submit" />
  </form>
</div>

<%include ./partials/footer %>
