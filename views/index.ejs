<%include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header">RESTful News Blog</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% news.forEach(function(news){ %>
      <div class="item">
        <div class="image">
          <img src="<%= news.image %>" />
        </div>
        <div class="content">
          <a class="header" href="/news/<%= news._id %>"><%= news.title %></a>
          <div class="metadata">
            <span> <%= news.created.toDateString() %> </span>
          </div>
          <div class="description">
            <p><%- news.body.substring(0, 100) %>...</p>
          </div>
          <div class="extra">
            <a class="ui floatet teal button" href="/news/<%= news._id %>">
              Read More...<i class="right chevron icon"></i
            ></a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%include ./partials/footer %>
