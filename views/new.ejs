<%include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Post</div>
  <form class="ui form" action="/news" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="news[title]" placeholder="Title" />
    </div>

    <div class="field">
      <label>Image</label>
      <input type="text" name="news[image]" placeholder="Image" />
    </div>

    <div class="field">
      <label>News Content</label>
      <textarea name="news[body]" required></textarea>
    </div>
    <input class="ui big inverted purple button" type="submit" />
  </form>
</div>

<%include ./partials/footer %>
